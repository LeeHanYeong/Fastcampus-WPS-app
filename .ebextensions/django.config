option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: django/fastcampus/wsgi.py
    NumProcesses: 3
    NumThreads: 20
  aws:elasticbeanstalk:container:python:staticfiles:
    "/static/": "django/static_root/"
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: fastcampus.settings
    PYTHONPATH: /opt/python/current/app/django:$PYTHONPATH
    ALLOWED_HOSTS: ".elasticbeanstalk.com"
    LANG: "ko_KR.utf8"
    LC_ALL: "ko_KR.UTF-8"
    LC_LANG: "ko_KR.UTF-8"

container_commands:
  01_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python django/manage.py collectstatic --noinput"
  02_migrate:
    command: "python django/manage.py migrate --noinput"